@charset "euc-kr";

/* ÅÇ ¸ñ·Ï */
.tab-container .tab-list,
.nested-tab-container .nested-tab-list { display:flex; width:100%; }
.tab-container .tab-list > li { flex:1; }
.tab-container .tab-item button,
.nested-tab-container .nested-tab-item button { padding: 10px 20px; width:100%; border: 1px solid var(--color-c); border-bottom: none; background: #f9f9f9; margin-right: 5px; transition: all 0.3s ease; }
.tab-container .tab-item:hover,
.nested-tab-container .nested-tab-item:hover { background: #eaeaea; }

/* È°¼ºÈ­µÈ ÅÇ */
.tab-container .tab-item.active button,
.nested-tab-container .nested-tab-item.active button { background: var(--active); color:var(--white); border-color: var(--active); font-weight: bold; }

/* ÅÇ ³»¿ë ¿µ¿ª */
.tab-container .tab-panel,
.nested-tab-container .nested-tab-panel { display: none; /* ±âº»ÀûÀ¸·Î ¼û±è */ }
.tab-container .tab-panel.active,
.nested-tab-container .nested-tab-panel.active { display: block; /* È°¼ºÈ­µÈ ÆÐ³Î¸¸ º¸ÀÌ°Ô ÇÔ */ }

/* ÁßÃ¸ ÅÇ ½ºÅ¸ÀÏ */
.nested-tab-container { margin-top: 15px; padding: 10px; background: var(--color-f5); }
/* .nested-tab-container .nested-tab-list { border-bottom: 1px solid #ccc; } */
.nested-tab-container .nested-tab-item button { font-size: 14px; padding: 8px 15px; }


/* ½º¿ÍÀÌÆÛ ÅÇ  */
.tab-container .swiper-pagination-bullet { width:auto; height:auto; border-radius:0; background:none; opacity:1; }

.tab-container .swiper-pager { background:var(--white); }
.tab-container .swiper-slide > * { padding:0 20px 20px; }
.tab-container .swiper-slide > *:first-child { margin-top:30px; }

.tab-container .swiper-horizontal>.swiper-pagination-bullets,
.tab-container .swiper-pagination-bullets.swiper-pagination-horizontal,
.tab-container .swiper-pagination-custom, .swiper-pagination-fraction { top:0; }
/* .tab-container .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet,
.tab-container .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet { margin:0 15px 0 0; color:#999999;} */
.tab-container .swiper-horizontal>.swiper-pagination-bullets .swiper-pagination-bullet:last-child,
.tab-container .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet:last-child { margin-right:0; }


.tab-container .swiper-pager.tab-list { gap:10px; margin-bottom:10px; }
.tab-container .swiper-pager.tab-list li {margin:0;  padding:10px 20px; font-size:var(--font16); border:1px solid var(--color-c); background: var(--color-f5); }
.tab-container .swiper-pager.tab-list li.swiper-pagination-bullet-active { border-color:var(--active); background-color: var(--active); font-weight:700; color:var(--white); }
.tab-container .swiper-pager.tab-list li.swiper-pagination-bullet-active a { color:var(--white); }